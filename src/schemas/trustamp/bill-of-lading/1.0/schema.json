{
  "$id": "https://trustamp.com/schemas/bill-of-lading/1.0/schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "const": "https://schema.openattestation.com/2.0/schema.json"
    },
    "id": {
      "type": "string"
    },
    "$template": {
      "type": "object",
      "required": ["name", "type", "url"],
      "properties": {
        "name": {
          "type": "string",
          "const": "BILL_OF_LADING"
        },
        "type": {
          "type": "string",
          "const": "EMBEDDED_RENDERER"
        },
        "url": {
          "type": "string"
        }
      }
    },
    "issuers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "tokenRegistry", "identityProof"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uri"
          },
          "name": {
            "type": "string"
          },
          "tokenRegistry": {
            "type": "string",
            "pattern": "^0x[a-fA-F0-9]{40}$"
          },
          "identityProof": {
            "type": "object",
            "required": ["type", "location"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["DNS-TXT"]
              },
              "location": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "billOfLadingDetails": {
      "type": "object",
      "required": ["scac", "blNumber"],
      "properties": {
        "scac": {
          "type": "string",
          "description": "Standard Carrier Alpha Code"
        },
        "blNumber": {
          "type": "string",
          "description": "Bill of Lading Number"
        },
        "vessel": {
          "type": "string"
        },
        "voyageNo": {
          "type": "string"
        },
        "portOfLoading": {
          "type": "string"
        },
        "portOfDischarge": {
          "type": "string"
        },
        "carrierName": {
          "type": "string"
        },
        "packages": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string"
              },
              "weight": {
                "type": "string"
              },
              "measurement": {
                "type": "string"
              }
            }
          }
        },
        "shipper": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "address": {
              "type": "string"
            }
          }
        },
        "consignee": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "address": {
              "type": "string"
            }
          }
        },
        "notifyParty": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "address": {
              "type": "string"
            }
          }
        },
        "placeOfReceipt": {
          "type": "string"
        },
        "placeOfDelivery": {
          "type": "string"
        }
      }
    }
  },
  "required": ["version", "id", "$template", "issuers", "billOfLadingDetails"]
}